<Application
    x:Class="MultitoolWinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultitoolWinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Themes/ColorsDictionary.xaml"/>
                <ResourceDictionary Source="Themes/Animations.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <x:Double x:Key="StackPanelDefaultSpacing">35</x:Double>
            <x:Double x:Key="StackPanelButtonSpacing">10</x:Double>
            <x:Double x:Key="ButtonFontIconFontSize">12</x:Double>
            <CornerRadius x:Key="AppDefaultCornerRadius">5,5,5,5</CornerRadius>
        </ResourceDictionary>
    </Application.Resources>
</Application>
