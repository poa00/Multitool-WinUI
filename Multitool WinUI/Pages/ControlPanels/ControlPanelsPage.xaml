<Page
    x:Class="MultitoolWinUI.Pages.ControlPanels.ControlPanelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controlpanels="using:MultitoolWinUI.Pages.ControlPanels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <Grid
            RowSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>
        
            <VariableSizedWrapGrid
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                ItemHeight="140"
                Grid.Row="0"
                Grid.ColumnSpan="2">
                <VariableSizedWrapGrid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="Margin" Value="7"/>
                        <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
                        <Setter Property="FontSize" Value="24"/>
                    </Style>
                </VariableSizedWrapGrid.Resources>
                <Button 
                    x:Name="OpenSettingsFile"
                    Content="Open settings file location"
                    VariableSizedWrapGrid.ColumnSpan="2"
                    Click="LoadSettingsButton_Click"/>
                <Button 
                    x:Name="AddSettingsButton"
                    Content="Add settings"
                    VariableSizedWrapGrid.ColumnSpan="2"
                    Click="AddSettingsButton_Click"/>
            </VariableSizedWrapGrid>

            <AutoSuggestBox 
                x:Name="SettingsSearchBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                QueryIcon="Zoom"
                MinHeight="40"
                MinWidth="300"
                Grid.Row="1"
                Grid.Column="0"
                TextChanged="SettingsSearchBox_TextChanged"
                QuerySubmitted="SettingsSearchBox_QuerySubmitted"/>

            <Button
                x:Name="RefreshButton"
                Margin="0, 0, 20, 0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CornerRadius="5"
                Background="Transparent"
                Grid.Row="1"
                Grid.Column="1"
                Click="RefreshButton_Click">
                <FontIcon
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Glyph="&#xe72c;"
                    FontSize="20"/>
            </Button>

            <VariableSizedWrapGrid 
                x:Name="PinnedItemsWrapGrid"
                ItemHeight="140"
                ItemWidth="230"
                Orientation="Horizontal"
                Grid.ColumnSpan="2"
                Grid.Row="2">
                <VariableSizedWrapGrid.Resources>
                    <Style TargetType="controlpanels:SettingPathView">
                        <Setter Property="Background" Value="{ThemeResource SystemAccentColor}"/>
                    </Style>
                </VariableSizedWrapGrid.Resources>
            </VariableSizedWrapGrid>

            <VariableSizedWrapGrid 
                x:Name="ItemsWrapGrid"
                ItemHeight="140" 
                ItemWidth="230"
                Orientation="Horizontal"
                Grid.ColumnSpan="2"
                Grid.Row="3">
                <VariableSizedWrapGrid.Resources>
                    <Style TargetType="controlpanels:SettingPathView">
                        <Setter Property="Background" Value="{ThemeResource SystemBaseLowColor}"/>
                    </Style>
                </VariableSizedWrapGrid.Resources>
            </VariableSizedWrapGrid>
        </Grid>
    </ScrollViewer>
</Page>
