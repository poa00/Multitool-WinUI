<Page
    x:Class="MultitoolWinUI.Pages.Explorer.ExplorerHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:MultitoolWinUI.Controls"
    mc:Ignorable="d"
    Unloaded="Page_Unloaded"
    Background="{StaticResource PageBackgroundBrush}">

    <ListView
        x:Name="DisksGrid"
        IsItemClickEnabled="True"
        ItemClick="DisksGrid_ItemClick"
        SelectionMode="None"
        HorizontalAlignment="Stretch"
        Background="{StaticResource LightBlack}">
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
            </Style>
        </ListView.ItemContainerStyle>
    </ListView>
</Page>
