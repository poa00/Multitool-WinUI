<Page
    x:Class="MultitoolWinUI.Pages.Test.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultitoolWinUI.Pages.Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:twitch="using:Multitool.Net.Twitch"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <RichTextBlock Grid.Row="0">
            <Paragraph CharacterSpacing="15" LineStackingStrategy="MaxHeight" LineHeight="24">
                <Run Text="03:24" FontWeight="Light"/>
                <Run Text="psykomicron" FontWeight="Bold"/>
                <Run>
                    GIGACHAD Harry "MANUAL HEADPOP" BROWN  GIGACHAD Harry "MANUAL HEADPOP" BROWN  GIGACHAD Harry "MANUAL HEADPOP" BROWN  GIGACHAD Harry "MANUAL HEADPOP" BROWN  GIGACHAD Harry "MANUAL HEADPOP" BROWN
                </Run>
            </Paragraph>
        </RichTextBlock>

        <TextBox
            x:Name="ChatInput"
            PlaceholderText="Enter message"
            TextWrapping="Wrap"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            AcceptsReturn="True"
            ScrollViewer.VerticalScrollMode="Auto"
            Grid.Row="1"/>
    </Grid>
</Page>
