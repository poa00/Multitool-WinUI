            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <InfoBar
            x:Name="UpdateInfoBar"
            Severity="Informational"
            Opacity="1"
            Grid.ColumnSpan="2"
            Grid.Row="0">
            <InfoBar.Background>
                <SolidColorBrush Color="MediumPurple" Opacity="1"/>
            </InfoBar.Background>
        </InfoBar>

