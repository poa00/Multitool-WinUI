<Page
    x:Class="MultitoolWinUI.Pages.Widgets.WidgetSelectedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultitoolWinUI.Pages.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource PageBackgroundBrush}">

    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Margin="20,0,0,0"
            Spacing="{StaticResource StackPanelDefaultSpacing}" 
            Orientation="Horizontal"
            Grid.Row="0">
            <FontIcon Name="widgetFontIcon"/>
            <TextBlock Name="widgetTitle" Text="sdfklnsdflknsdflkn" FontSize="18" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Name="controlGrid" Grid.Row="1" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <ProgressRing 
                IsIndeterminate="True"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
